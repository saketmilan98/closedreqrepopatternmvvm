<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="pullsItem"
            type="app.asgn.mvvmpractice.models.PullsDataClassItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/background_cl"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv1"
            app:srcCompat="@drawable/ic_git_merge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"

            />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv1"
            app:layout_constraintEnd_toStartOf="@+id/tv3"
            app:layout_constraintBottom_toTopOf="@+id/tv2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textColor="#808080"
            android:text="@{``+ pullsItem.head.repo.full_name + ` #`+pullsItem.number}"
            tools:text="Pull #1"
            />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintStart_toStartOf="@+id/tv1"
            app:layout_constraintEnd_toStartOf="@+id/iv2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:text="@{pullsItem.title}"
            tools:text="description"
            />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv1"
            android:layout_marginEnd="6dp"
            android:textSize="10sp"
            android:textColor="#808080"
            android:textAlignment="center"
            tools:text="time"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv2"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
            app:layout_constraintTop_toTopOf="@+id/tv2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv2"
            android:layout_marginEnd="10dp"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#808080"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

